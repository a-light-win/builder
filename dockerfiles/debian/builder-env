#!/usr/bin/env bash

PKG_VERSION=${DEBIAN_IMAGE_TAG}
PKG_IMAGE=${DEBIAN_IMAGE}

PKG_LABEL_SOURCE=source=${BUILDER_SOURCE}
PKG_LABEL_LICENSES=licenses=${BUILDER_LICENSES}
PKG_LABEL_VERSION=version=${PKG_VERSION}
PKG_LABEL_DESCRIPTION=description="Debian base image for builder"

PKG_BUILD_ARG_VERSION=VERSION=${DEBIAN_VERSION}
