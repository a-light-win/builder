#!/usr/bin/env bash

PKG_VERSION=${NFPM_IMAGE_TAG}
PKG_IMAGE=${NFPM_IMAGE}

PKG_LABEL_SOURCE=source=${BUILDER_SOURCE}
PKG_LABEL_LICENSES=licenses=${BUILDER_LICENSES}
PKG_LABEL_VERSION=version=${PKG_VERSION}

PKG_BUILD_ARG_BASE_IMAGE=BASE_IMAGE=${DEBIAN_IMAGE_FULL}
PKG_BUILD_ARG_PKG_NAME=PKG_NAME=nfpm_${NFPM_VERSION}_${arch}
